{
  "version": "0.0.0",
  "name": "@nanopub/sign",
  "description": "JavaScript bindings for the Nanopub toolkit written in Rust",
  "license": "MIT",
  "homepage": "https://github.com/vemonet/nanopub-rs",
  "module": "web.js",
  "types": "web.d.ts",
  "collaborators": [
    "Vincent Emonet <vincent.emonet@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vemonet/nanopub-rs.git"
  },
  "files": [
    "*.{js,wasm,d.ts}"
  ],
  "sideEffects": [
    "./snippets/*"
  ],
  "scripts": {
    "fmt": "prettier \"**/*.{ts,tsx,js,cjs,json,md,html}\" --ignore-path .gitignore --write",
    "old-test": "wasm-pack build --debug --target nodejs && mocha",
    "jest" : "jest --verbose false",
    "test": "npm run build && jest",
    "build": "rm -rf pkg pkg-web pkg-node pkg-bundler && wasm-pack build --release --target web --out-name web && mv pkg pkg-web && wasm-pack build --release --target bundler --out-name bundler && mv pkg pkg-bundler && wasm-pack build --release --target nodejs --out-name node && mv pkg pkg-node && node build_package.js && rm -r pkg-web pkg-node pkg-bundler",
    "start": "http-server ./",
    "release": "npm run build && npm publish ./pkg --access public",
    "pack": "npm run build && npm pack ./pkg"
  },
  "standard": {
    "ignore": [
      "pkg*"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "prettier": {
    "trailingComma": "none",
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "useTabs": false,
    "printWidth": 120,
    "pluginSearchDirs": [
      "."
    ]
  }
}
